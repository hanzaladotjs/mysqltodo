{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node"]          // ðŸ‘ˆ THIS LINE is required for process, fs, etc.
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
